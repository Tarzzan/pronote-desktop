{
  "name": "pronote-desktop",
  "private": true,
  "version": "1.6.1",
  "type": "module",
  "main": "electron/main.cjs",
  "description": "Application native Pronote pour Linux et macOS",
  "homepage": "https://github.com/pronote-desktop/pronote-desktop",
  "repository": {
    "type": "git",
    "url": "https://github.com/pronote-desktop/pronote-desktop.git"
  },
  "bugs": {
    "url": "https://github.com/pronote-desktop/pronote-desktop/issues"
  },
  "author": {
    "name": "Pronote Desktop Contributors",
    "email": "contact@pronote-desktop.fr"
  },
  "scripts": {
    "dev": "vite",
    "build": "node scripts/bump-version.cjs && tsc -b && vite build",
    "build:web": "tsc -b && vite build",
    "build:deb": "tsc -b && vite build && electron-builder --linux deb",
    "build:all": "node scripts/bump-version.cjs && tsc -b && vite build && electron-builder --linux deb",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron electron/main.cjs",
    "electron:dev": "concurrently \"pnpm dev\" \"wait-on http://localhost:5173 && electron electron/main.cjs\""
  },
  "build": {
    "appId": "fr.pronote.desktop",
    "productName": "Pronote Desktop",
    "copyright": "Copyright \u00a9 2026 Pronote Desktop Contributors",
    "directories": {
      "output": "release",
      "buildResources": "build-resources"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Education",
      "description": "Application native Pronote pour Linux",
      "maintainer": "Pronote Desktop Contributors <contact@pronote-desktop.fr>",
      "icon": "build-resources/icon.png"
    },
    "deb": {
      "packageName": "pronote-desktop",
      "depends": [
        "libgtk-3-0",
        "libnotify4",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils",
        "libatspi2.0-0",
        "libuuid1",
        "libsecret-1-0"
      ],
      "afterInstall": "build-resources/postinst.sh",
      "afterRemove": "build-resources/postrm.sh"
    }
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.2.1",
    "axios": "^1.13.5",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.34.3",
    "lucide-react": "^0.575.0",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.1",
    "recharts": "^3.7.0",
    "tailwindcss": "^4.2.1",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "serve": "^14.2.5",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4"
  }
}